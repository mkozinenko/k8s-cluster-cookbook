apiVersion: v1
kind: Pod
metadata:
  name: scheduler-master
spec:
  hostNetwork: true
  containers:
  - name: scheduler-elector
    image: <%= @podmaster_image %>
    command:
    - /podmaster
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
    - --etcd-config=/etc/kubernetes/etcd.client.conf
<% end -%>
<% if node['kubernetes']['secure']['enabled'] == 'false' -%>
    - --etcd-servers=http://127.0.0.1:<%= @etcd_client_port %>
<% end -%>
    - --key=scheduler
    - --source-file=/inactive-manifests/scheduler.yaml
    - --dest-file=/manifests/scheduler.yaml
    volumeMounts:
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
    - mountPath: /etc/kubernetes
      name: kubernetes
      readOnly: true
    - mountPath: <%= @etcd_cert_dir %>
      name: secrets
      readOnly: true
<% end -%>
    - mountPath: /inactive-manifests
      name: inactive-manifests
      readOnly: true
    - mountPath: /manifests
      name: manifests
  - name: controller-manager-elector
    image: <%= @podmaster_image %>
    command:
    - /podmaster
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
    - --etcd-config=/etc/kubernetes/etcd.client.conf
<% end -%>
<% if node['kubernetes']['secure']['enabled'] == 'false' -%>
    - --etcd-servers=http://127.0.0.1:<%= @etcd_client_port %>
<% end -%>
    - --key=controller
    - --source-file=/inactive-manifests/controller-manager.yaml
    - --dest-file=/manifests/controller-manager.yaml
    terminationMessagePath: /dev/termination-log
    volumeMounts:
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
    - mountPath: /etc/kubernetes
      name: kubernetes
      readOnly: true
    - mountPath: <%= @etcd_cert_dir %>
      name: secrets
      readOnly: true
<% end -%>
    - mountPath: /inactive-manifests
      name: inactive-manifests
      readOnly: true
    - mountPath: /manifests
      name: manifests
  volumes:
<% if node['kubernetes']['secure']['enabled'] == 'true' -%>
  - hostPath:
      path: /etc/kubernetes
    name: kubernetes
  - hostPath:
      path: <%= @etcd_cert_dir %>
    name: secrets
<% end -%>
  - hostPath:
      path: /etc/kubernetes/inactive-manifests
    name: inactive-manifests
  - hostPath:
      path: /etc/kubernetes/manifests
    name: manifests
